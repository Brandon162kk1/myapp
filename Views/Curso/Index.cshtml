@model myapp.Models.Curso
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    REGISTRO DE ALUMNOS POR MATERIAS
    <form asp-controller="Curso" asp-action="Registrar">
    <br>
    <div class="col-sm-4">
        <label >Nombre del Alumno</label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <br>
    <label>Materias</label>
    <div class="form-check">
            <input asp-for="Materia1" class="form-check-input" type="checkbox">
            <label class="form-check-label">Matematica</label>
    </div>
    <div class="form-check">
            <input asp-for="Materia2" class="form-check-input" type="checkbox">
            <label class="form-check-label" >Lenguaje</label>
    </div>
    <div class="form-check">
            <input asp-for="Materia3" class="form-check-input" type="checkbox">
            <label class="form-check-label" >Historia</label>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Registrar</button>
    </form>
    <h1>@ViewData["Message1"]</h1>
    <h2>@ViewData["Message2"]</h2>
    <h3>@ViewData["Message3"]</h3>
</body>
</html>