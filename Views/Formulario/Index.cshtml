@model myapp.Models.Formulario


<div class="text-right">
    <h1 class="display-4">Formulario web Completo</h1>
    <form asp-controller="Formulario" asp-action="Guardar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <div class="form-group">
            <label asp-for="Apellido" class="control-label"></label>
            <input asp-for="Apellido" class="form-control" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Titulo" class="control-label"></label>
            <input asp-for="Titulo" class="form-control"  />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
        <label asp-for="Nivel" class="control-label"></label>
        <div class="form-check">
            <input class="form-check-input" type="radio">
            <label class="form-check-label" >Escuela Secundaria</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio">
            <label class="form-check-label" >Colega</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio">
            <label class="form-check-label" >La escuela de Posgrado</label>
        </div>
        <label asp-for="Sexo" class="control-label"></label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label" >Masculino</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label" >Femenino</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label" >Prefiero no decirlo</label>
        </div>
        <label asp-for="Fecha" class="control-label"></label>
        <div class="col-sm-4">
            <input  type="text"
               class="form-control"
               id="datepicker"
               data-provide="datepicker"
               placeholder="mm/dd/yyyy"
               data-date-autoclose="true"
               data-date-today-highlight="true" >
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Enviar</button> 
    </form>
    <h1>@ViewData["Message"]</h1>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}